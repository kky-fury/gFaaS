{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es5",
    "module": "CommonJS",
    "lib": ["es6", "es2015", "dom"],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}
